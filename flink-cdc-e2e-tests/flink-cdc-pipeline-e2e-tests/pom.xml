    <modelVersion>4.0.0</modelVersion>

    <artifactId>flink-cdc-pipeline-e2e-tests</artifactId>

    <properties>
        <flink-1.19>1.19.2</flink-1.19>
        <flink-1.20>1.20.1</flink-1.20>
